+    def _reduce_net(self, time, data, filename):
+        data = data.split(b'\n')
+        for line in data[2:]:
+            if b":" not in line:
+                continue
+            parts = line.split()
+            iface = (parts[0].strip(b':')).decode('ascii')
+            receive_bytes = int(parts[1])
+            transmit_bytes = int(parts[9])
+            if iface in self.net_stats:
